{
  "manifest_version": 3,
  "name": "LiveScribe",
  "version": "0.1.0",
  "description": "Real-time transcription for video calls",
  "permissions": ["tabCapture", "activeTab", "offscreen", "alarms", "scripting"],
  "host_permissions": ["http://localhost:3001/*", "ws://localhost:3001/*", "<all_urls>"],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "action": {
    "default_title": "LiveScribe"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://*.teams.microsoft.com/*",
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["processor.worklet.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
