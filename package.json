{
  "name": "livescribe",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time video call transcription",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:extension": "npm run dev --workspace=@livescribe/extension",
    "dev:backend": "npm run dev --workspace=@livescribe/backend",
    "dev": "concurrently --kill-others-on-fail --raw \"npm run dev:backend\" \"npm run dev:extension\"",
    "dev:stop": "pkill -f 'tsx watch' && pkill -f 'vite build' || true",
    "build": "npm run build --workspaces",
    "build:extension": "npm run build --workspace=@livescribe/extension",
    "build:backend": "npm run build --workspace=@livescribe/backend",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.7.0"
  }
}
